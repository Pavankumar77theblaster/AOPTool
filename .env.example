# AOPTool Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ================================
# DATABASE CREDENTIALS
# ================================
# Generate secure passwords: openssl rand -base64 32

POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD_1
POSTGRES_USER=aoptool_user
POSTGRES_DB=aoptool

MONGODB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD_2
MONGODB_USER=aoptool_user
MONGODB_DATABASE=aoptool

REDIS_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD_3

MINIO_USER=minioadmin
MINIO_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD_4

# ================================
# APPLICATION SECRETS
# ================================
# Generate JWT secret: openssl rand -hex 64

JWT_SECRET=CHANGE_ME_TO_RANDOM_STRING_AT_LEAST_64_CHARS_LONG
ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_ADMIN_PASSWORD

# ================================
# AI API KEYS
# ================================
# Get Claude API key from: https://console.anthropic.com/
# Get OpenAI API key from: https://platform.openai.com/api-keys

CLAUDE_API_KEY=sk-ant-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ================================
# PENTESTING TOOL CREDENTIALS
# ================================

# Metasploit RPC password
MSF_PASSWORD=CHANGE_ME_TO_MSF_PASSWORD

# OWASP ZAP API key
ZAP_API_KEY=CHANGE_ME_TO_ZAP_API_KEY

# ================================
# APPLICATION CONFIGURATION
# ================================

# Environment (development, production, testing)
ENVIRONMENT=development

# API URLs
CONTROL_PLANE_URL=http://control_plane:8000
INTELLIGENCE_PLANE_URL=http://intelligence_plane:5000
EXECUTION_PLANE_URL=http://execution_plane:5001

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend URL
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# ================================
# CELERY CONFIGURATION
# ================================

# Redis broker URL (auto-constructed from REDIS_PASSWORD)
# REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Celery worker concurrency (number of parallel workers)
CELERY_WORKER_CONCURRENCY=4

# ================================
# MLFLOW CONFIGURATION
# ================================

MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=http://minio:9000

# ================================
# SECURITY SETTINGS
# ================================

# JWT token expiration (hours)
JWT_EXPIRATION_HOURS=24

# Max concurrent attacks per target
MAX_CONCURRENT_ATTACKS=10

# Request rate limit (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# Session timeout (minutes)
SESSION_TIMEOUT_MINUTES=30

# ================================
# LOGGING
# ================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ================================
# CLOUD CONFIGURATION (Optional)
# ================================

# AWS Configuration (if using hybrid cloud)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# GCP Configuration (if using hybrid cloud)
GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY_PATH=

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable learning plane
ENABLE_LEARNING_PLANE=true

# Enable/disable AI translation
ENABLE_AI_TRANSLATION=true

# Use local LLM instead of API
USE_LOCAL_LLM=false

# ================================
# DEVELOPMENT/DEBUG SETTINGS
# ================================

# Enable debug mode (verbose logging)
DEBUG=false

# Enable hot reload for development
HOT_RELOAD=true

# Skip scope validation (DANGEROUS - only for testing)
SKIP_SCOPE_VALIDATION=false

# ================================
# INSTRUCTIONS
# ================================
# 1. Copy this file: cp .env.example .env
# 2. Generate secure passwords:
#    - Linux/Mac: openssl rand -base64 32
#    - Windows: Use password generator or PowerShell:
#      -Add-Type -AssemblyName System.Web
#      [System.Web.Security.Membership]::GeneratePassword(32,10)
# 3. Get API keys from respective providers
# 4. Set ADMIN_PASSWORD to your desired admin password
# 5. Review security settings
# 6. NEVER commit .env to version control!
